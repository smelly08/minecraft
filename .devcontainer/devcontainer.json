{
  "name": "lxde-desktop-java-wrapper",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "forwardPorts": [8080],
  "postCreateCommand": "bash /workspaces/$(basename $(pwd))/.devcontainer/start-lxde.sh",
  "portsAttributes": {
    "8080": {
      "label": "LXDE Desktop GUI",
      "onAutoForward": "openBrowser"
    }
  }
}
